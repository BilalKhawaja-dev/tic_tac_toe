{
  "name": "@gaming-platform/game-engine",
  "version": "1.0.0",
  "description": "Core game engine service for tic-tac-toe multiplayer games",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest --runInBand",
    "test:unit": "jest tests/unit --runInBand",
    "test:integration": "jest tests/integration --runInBand",
    "test:e2e": "jest tests/e2e --runInBand",
    "test:watch": "jest --watch --runInBand",
    "test:coverage": "jest --coverage --runInBand",
    "test:ci": "jest --ci --coverage --watchAll=false --runInBand",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "build": "echo 'No build step required for Node.js'",
    "docker:build": "docker build -t game-engine .",
    "docker:run": "docker run -p 3000:3000 game-engine"
  },
  "keywords": [
    "tic-tac-toe",
    "game-engine",
    "websocket",
    "multiplayer",
    "real-time"
  ],
  "author": "Global Gaming Platform Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "ws": "^8.14.2",
    "uuid": "^9.0.1",
    "joi": "^17.11.0",
    "aws-sdk": "^2.1490.0",
    "pg": "^8.11.3",
    "redis": "^4.6.10",
    "winston": "^3.11.0",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.1.5",
    "dotenv": "^16.3.1",
    "@aws-sdk/client-dynamodb": "^3.441.0",
    "@aws-sdk/lib-dynamodb": "^3.441.0",
    "@aws-sdk/client-secrets-manager": "^3.441.0",
    "amazon-dax-client": "^1.2.10"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "jest-sonar-reporter": "^2.0.0",
    "babel-jest": "^29.7.0",
    "@babel/core": "^7.23.2",
    "@babel/preset-env": "^7.23.2",
    "nodemon": "^3.0.1",
    "eslint": "^8.52.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-n": "^16.3.1",
    "eslint-plugin-promise": "^6.1.1",
    "supertest": "^6.3.3",
    "@types/jest": "^29.5.7"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/index.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}